@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("document").ready(function () {
            var today = new Date();

            var dd = today.getDate();
            var mm = today.getMonth();
            var yyyy = today.getFullYear();

            var minDate = yyyy + '-' + mm + '-' + dd;
            $("#LeaveDate").attr('min',minDate);
        });
    </script>
}
