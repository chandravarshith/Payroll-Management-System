@model Payroll_Management_System.Models.Leave

@{
    ViewData["Title"] = "Reject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mx-4">
    <h1 class="mt-5">Reject Leave</h1>
    <dl class="row mt-4">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumOfDays)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumOfDays)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveStatus)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-success me-2" />
        <a class="btn btn-dark" asp-action="Index">Cancel</a>
    </form>
</div>
