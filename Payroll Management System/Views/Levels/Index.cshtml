@model IEnumerable<Payroll_Management_System.Models.Level>

@{
    ViewData["Title"] = "Levels";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4 mb-5 mx-3 ">
    <h1 class="fw-bold ls-tight">Manage Levels</h1>
    <div class="col-lg-7 mt-3">
        <form id="searchForm" asp-controller="Levels" asp-action="Index" method="get">
            <div class="input-group">
                <input type="number" name="searchString" value="@TempData.Peek("searchLevel").ToString()" placeholder="search level number" id="searchLevel" class="form-control" style="box-shadow:none;" />
                <button id="searchButton" type="submit" class="btn btn-dark" style="box-shadow:none;">
                    <i class="bi bi-search" style="color=white;"></i>
                </button>
            </div>
        </form>
    </div>
    <div class="col-lg-2 mt-3">
    </div>
    <div class="col-lg-3 mt-3">
        <a class="btn btn-dark" style="box-shadow:none;" asp-action="Create">
            <i class="bi bi-plus-circle me-2"></i>Add Level
        </a>
    </div>
</div>

<div class="container mx-2">
    <div class="row">
        @foreach (var item in Model) {
            <div class="col-lg-3 my-3 mx-2 me-5">
                <div class="card" style="width: 18rem;border-radius:7px;box-shadow:3px 3px 3px 3px grey;">
                    <div class="card-body">
                        <div class="row">
                        <div class="col-lg-9 d-flex justify-content-center">
                            <h4 class="card-title" style="display: inline;">Level @Html.DisplayFor(modelItem => item.LevelId)</h4>
                        </div>
                            <div class="col-lg-3 d-flex justify-content-start">
                            <a class="btn" asp-action="Details" asp-route-id="@item.LevelId" style="box-shadow:none;">
                                <i class="bi bi-eye-fill me-2" style="color:grey;"></i>
                            </a>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("document").ready(function () {
            $("#searchLevel").change(function () {
                var searchString = $("#searchLevel").val();
                if (searchString == "") {
                    $("#searchButton").click();
                }
            });
        });
    </script>
}