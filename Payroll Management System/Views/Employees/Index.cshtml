@model IEnumerable<Payroll_Management_System.Models.Employee>

@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4 mb-3 mx-3">
    <h1>Manage Employees</h1>
    <div class="col-lg-7 mt-3">
        <form id="searchForm" asp-controller="Employees" asp-action="Index" method="get">
            <div class="input-group">
                <input type="search" name="searchString" value="@TempData.Peek("searchEmp").ToString()" placeholder="search employee email" id="searchEmp" class="form-control" style="box-shadow:none;" />
                <button id="searchButton" type="submit" class="btn btn-dark" style="box-shadow:none;">
                    <i class="bi bi-search" style="color=white;"></i>
                </button>
            </div>
        </form>
    </div>
</div>


