<div class="container mx-2">
    <div class="row mt-5">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 my-3 mx-2 me-5">
                <div class="card" style="width: 15rem;height: 12rem; border-radius:7px;box-shadow:3px 3px 3px 3px grey;">
                    <div class="card-body mx-2">
                        <h4 class="card-title mb-3">@Html.DisplayFor(modelItem => item.MailId)</h4>
                        <h6 class="card-subtitle just mb-4 text-muted">
                            @if(item.Status.Equals("Active")){
                                <i class="bi bi-check-circle-fill me-2" style="color: green;"></i>
                            }
                            else{
                                <i class="bi bi-x-circle-fill me-2" style="color: darkred;"></i>
                            }
                            @Html.DisplayFor(modelItem => item.Status)
                        </h6>
                        <a class="w-100 btn btn-dark mx-auto" asp-action="Details" asp-route-id="@item.EmployeeId" style="box-shadow:none;">
                            <i class="bi bi-eye-fill me-2" style="color:white;"></i>View
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("document").ready(function () {
            $("#searchEmp").change(function () {
                var searchString = $("#searchEmp").val();
                if (searchString == "") {
                    $("#searchButton").click();
                }
            });
        });
    </script>
}