@model Payroll_Management_System.Models.EmployeePaySlip

@{
    ViewData["Title"] = "Employee Pay Slip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-lg-10">
        <h1 id="Heading">Pay Slip</h1>
    </div>
    <div class="col-lg-2">
        <div class="mt-4 me-5">
            <button class="btn btn-dark" type="button" onclick="JavaScript:printReport('print');">
                <i class="bi bi-printer-fill" style="color:white;"></i>  Print
            </button>
        </div>
    </div>
</div>

<div class="row mt-2 mb-3 mx-3 ">
    <div class="col-lg-7">
        <form id="searchForm" asp-controller="Employees" asp-action="GeneratePaySlip" method="get">
            <div class="form-group">
                <label class="control-control-sm" style="color:grey;">&nbsp;Choose month:</label>
                <select id="searchMonth" class="form-select" name="searchString" asp-items="@(new SelectList((System.Collections.IEnumerable)ViewBag.payStack, "Id", "Id"))">
                    <option value="@TempData.Peek("searchMonth").ToString()">@TempData.Peek("searchMonth").ToString()</option>
                </select>
                @*<input type="number" name="searchString"
                       value="@TempData.Peek("searchMonth").ToString()"
                       placeholder="search level number" id="searchMonth" 
                    class="form-control" style="box-shadow:none;" />  *@              
            </div>
        </form>
    </div>
</div>

