    </div>
}

@section Scripts {

    <script language="javascript" type="text/javascript">
        function printReport(strid) {
            var divElements = document.getElementById(strid).innerHTML;
            var heading = document.getElementById("Heading").innerHTML;
            var oldPage = document.body.innerHTML;
            document.body.innerHTML = '<h3>' + heading + '</h3>' + divElements;
            window.print();
            document.body.innerHTML = oldPage;
        }
    </script>
    <script>
        $("document").ready(function () {
            $("#searchMonth").change(function () {
                $("#searchForm").submit();
            });
        });
    </script>
}

    